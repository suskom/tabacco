{
  "manifest_version": 3,

  "name": "tabacco",
  "description": "",
  "version": "0.1.7",
  "default_locale": "sk",

  "browser_action": {
    "default_icon": {
      "16": "icon16.png",
	  "19": "icon.png",
      "48": "icon48.png",
      "128": "icon128.png" 
    },
    "default_popup": "popup.html",
    "default_title": "tabacco extension"
  },
  
  "background": {
    "scripts": [
		"patterns/pattern.js",
		"patterns/pattern.closingSource.js",
		"patternControl.js",
		"actionListener.js",
		"user.js",
		"background.js"
	]
  },

  "permissions": [
	"tabs",
	"windows",
	"alarms",
	"identity",
	"identity.email",
	"notifications",
	"storage",
	"sessions",
	"bookmarks",
	"idle",
    "https://ajax.googleapis.com/"
  ]
}